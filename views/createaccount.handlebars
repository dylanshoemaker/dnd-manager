              <div class='input-field col s12'>
                <input class='validate orange-text text-accent-2' type='email' name='email' id='email' />
                <label for='email'>Enter your email</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate orange-text text-accent-2' type='password' name='password' id='password' />
                <label for='password'>Enter your password</label>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                <button type='submit' name='btn_create'
                  class='col s12 btn btn-large waves-effect orange'>Submit</button>
              </div>
            </center>
          </form>
        </div>
      </div>
    </center>

