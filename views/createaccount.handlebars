<main id="createaccount-bg">

    <div class="container">

        <h5 id="create-text">Create Account</h5>

        <div id="form" class="z-depth-1 lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px;">

            <form class="col s12 signup-form" method="post">

                <div class='row'>
                    <div class='col s12'>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate orange-text text-accent-2' type='email' name='email' id='email' />
                        <label for='email'>Enter your email</label>
                    </div>
                </div>

                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate orange-text text-accent-2' type='password' name='password'
                            id='password' />
                        <label for='password'>Enter your password</label>
                    </div>
                </div>

                <br />
                <div class='row'>
                    <button href="/" type='submit' name='btn_create'
                        class='col s12 btn btn-large waves-effect orange'>Submit</button>
                </div>
            </form>
        </div>
    </div>
</main>