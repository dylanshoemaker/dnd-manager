<body id="index-bg">
    <header class='container'>
        <nav id='nav'>
            <div class="nav-wrapper">
                <a id="header" href="#">
                    <h3 class="center"><i class="fas fa-xs fa-dragon"></i> Dungeons & Dragons Game Manager <i
                            class="fas fa-xs fa-swords"></i></h3>
                </a>
            </div>
        </nav>
    </header>

    <main class="container">

        <button type='submit' name='btn_create_party' class='col s12 btn btn-large waves-effect orange'>New
            Party</button>


        <div class="row center">
            <div id="party-carousel" class="col carousel ">
                {{#each parties as |party| }}
                <div class="row carousel-item">
                    <div class="col s12">
                        <img class="img" src="{{party.image}}">
                        <span class="black"><a href="{{party.party_url}}">{{party.party_name}}</a></span>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </main>

