<main class="container">

    <button href="/addparty" type='submit' name='btn_create_party' class='col s12 btn btn-large waves-effect orange'>New Party</button>
    <button href="addcharacter" type='submit' name='btn_create_character' class='col s12 btn btn-large waves-effect orange'>New Character</button>

    {{#each parties as |party| }}
    <div class="row center">
        <div id="party-carousel" class="col carousel ">
            <div class="row carousel-item" href="{{party.id}}">
                <div class="col s12">
                    <img class="img" src="{{party.image}}">
                    <span class="black"><a href="{{party.party_url}}">{{party.party_name}}</a></span>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</main>